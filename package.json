{
  "name": "node-express-typescript",
  "version": "1.0.0",
  "description": "Node Project Template - Express Typescript",
  "main": ".dist/server.js",
  "scripts": {
    "build": "tsc -p ./tsconfig-build.json",
    "clean": "npx rimraf node_modules dist coverage",
    "lint": "prettier --write .",
    "packages:update": "npm update && npx -y npm-check-updates -u",
    "prestart": "npm run build",
    "start": "node ./dist/server.js",
    "start:devserver": "nodemon --ignore 'tests/**/*.ts' -r dotenv/config -L ./src/server.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:single": "jest -- "
  },
  "private": true,
  "keywords": [],
  "author": "Sebastiaan de Haan",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.10",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.12",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
